<?xml version="1.0"?>

<launch>
  <!-- ========================== Additional Launch Files ========================= -->

  <arg name="uriE" default="radio://0/80/250K/E7E7E7E7EE" />
  <arg name="uriF" value="radio://0/80/250K/E7E7E7E7EF" />
  

  <include file="$(find fastrack_crazyflie_demos)/launch/rviz.launch"/>
  <include file="$(find rosbridge_server)/launch/rosbridge_websocket.launch" >
     <arg name="port" value="9090"/>
  </include>

    <!-- Crazyflie interface. -->
  <include file="$(find crazyflie_driver)/launch/crazyflie_server.launch" />

  <group ns="drone1">
  	<include file="$(find userpath)/launch/hw_demo.launch">
      <arg name="uri" default="$(arg uriF)" />
  		<arg name="prefix" value="drone1" />
      <arg name="hover_x" value="0.0" />
      <arg name="hover_y" value="0.0" />
      <arg name="hover_z" value="1.0" />
  	</include>
  </group>

  <group ns="drone2">
  	<include file="$(find userpath)/launch/hw_demo.launch">
      <arg name="uri" value="$(arg uriE)" />
  		<arg name="prefix" value="drone2" />
      <arg name="hover_x" value="0.0" />
      <arg name="hover_y" value="1.0" />
      <arg name="hover_z" value="1.0" />
  	</include>
  </group> 


  <include file="$(find userpoint_publisher)/launch/publisher.launch"> </include> 
</launch>